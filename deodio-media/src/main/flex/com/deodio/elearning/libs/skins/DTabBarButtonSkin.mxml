<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:d="http://ns.adobe.com/fxg/2008/dt"
		width="100" height="30">
	
	<fx:Metadata>
		[HostComponent("spark.components.ToggleButton")]
	</fx:Metadata>
	
	<s:states>
		<s:State name="up"/>
		<s:State name="over"/>
		<s:State name="down"/>
		<s:State name="disabled"/>
		<s:State name="upAndSelected"/>
		<s:State name="overAndSelected"/>
		<s:State name="downAndSelected"/>
		<s:State name="disabledAndSelected"/>
	</s:states>
	
	<s:Rect id="fill" left="1" right="1" top="1" bottom="1" width="15" height="30">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="0x292929" 
								 color.over="0x292929"
								 color.down="0x3a3a3a"
								 color.disabled="0xa3a3a3"
								 color.upAndSelected="0x3a3a3a"
								 color.overAndSelected="0x3a3a3a" 
								 color.downAndSelected="0x3a3a3a" 
								 color.disabledAndSelected="0xa3a3a3"
								 alpha="0.85" 
								 alpha.overAndSelected="1" />
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
	
	<s:RichText id="labelDisplay" x="32" y="10" color="#ebebeb" fontFamily="yahei" fontSize="14"/>
</s:Skin>